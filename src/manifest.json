{
  "manifest_version": 3,
  "name": "CareerStack AI",
  "version": "2.0.0",
  "description": "AI-powered job application tracker for Notion.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://api.notion.com/*",
    "https://*.linkedin.com/*",
    "https://*.indeed.com/*"
  ],
  "background": {
    "service_worker": "background.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*", "https://*.indeed.com/*"],
      "js": ["content.ts"]
    }
  ]
}
