{
  "name": "careerstack-ai",
  "version": "2.0.1",
  "description": "AI-powered job application tracker for Notion.",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "zip": "npm run build && cd dist && zip -r ../extension.zip .",
    "test": "echo \"Error: no test specified\" && exit 0"
  },
  "standard-version": {
    "scripts": {
      "postbump": "node -e \"const m=require('./src/manifest.json');m.version=require('./package.json').version;require('fs').writeFileSync('./src/manifest.json',JSON.stringify(m,null,2)+'\\n')\" && git add src/manifest.json"
    }
  },
  "keywords": [
    "chrome-extension",
    "notion",
    "ai",
    "productivity",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chrome": "^0.0.304",
    "typescript": "^5.7.3",
    "vite": "^6.2.0",
    "vite-plugin-web-extension": "^4.4.3"
  }
}
