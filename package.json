{
  "name": "careerstack-ai",
  "version": "2.5.0",
  "description": "AI-powered job application tracker for Notion.",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "zip": "npm run build && cd dist && zip -r ../extension.zip .",
    "test": "vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "chrome-extension",
    "notion",
    "ai",
    "productivity",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@types/chrome": "^0.0.304",
    "@types/eslint__js": "^8.42.3",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^15.15.0",
    "jsdom": "^28.1.0",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^6.2.0",
    "vite-plugin-web-extension": "^4.5.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@sentry/browser": "^10.39.0"
  }
}
