{
  "name": "careerstack-ai",
  "version": "2.1.1",
  "description": "AI-powered job application tracker for Notion.",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "zip": "npm run build && cd dist && zip -r ../extension.zip .",
    "test": "vitest run"
  },
  "standard-version": {
    "bumpFiles": [
      "package.json",
      "src/manifest.json"
    ]
  },
  "keywords": [
    "chrome-extension",
    "notion",
    "ai",
    "productivity",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chrome": "^0.0.304",
    "jsdom": "^28.1.0",
    "typescript": "^5.7.3",
    "vite": "^6.2.0",
    "vite-plugin-web-extension": "^4.4.3",
    "vitest": "^4.0.18"
  }
}
